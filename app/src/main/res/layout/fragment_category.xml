<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Fragment.Main.CategoryFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:text="Danh má»¥c"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>
        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:id="@+id/menuCategory1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/tieuthuyet"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/tieuthuyet" />

            <ImageView
                android:id="@+id/truyentranh"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/truyentranh" />


        </LinearLayout>

        <LinearLayout

            android:id="@+id/menuCategory2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menuCategory1"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/kinhte"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/sachkinhte" />

            <ImageView
                android:id="@+id/kynangsong"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/kynangsong" />
        </LinearLayout>


        <LinearLayout

            android:id="@+id/menuCategory3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menuCategory2"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/tieusu"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/tieusu" />

            <ImageView
                android:id="@+id/ngoaingu"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/ngoaingu" />
        </LinearLayout>
</RelativeLayout>