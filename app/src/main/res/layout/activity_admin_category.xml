<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabSearch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="Trang Quản trị"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/header_category"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/bar"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif"
        android:text="Thêm Sách mới"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:textStyle="bold" />

    <LinearLayout

        android:id="@+id/menuCategory1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_category"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/tieuthuyet"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/tieuthuyet" />

        <ImageView
            android:id="@+id/truyentranh"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/truyentranh" />

        <ImageView
            android:id="@+id/kinhte"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/sachkinhte" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/menuCategory2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuCategory1"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/kynangsong"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/kynangsong" />

        <ImageView
            android:id="@+id/tieusu"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/tieusu" />

        <ImageView
            android:id="@+id/ngoaingu"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ngoaingu" />


    </LinearLayout>

    <Button
        android:id="@+id/btnDangxuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menuCategory2"
        android:background="@drawable/background_login"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:text="Đăng xuất"
        android:textAllCaps="false"
        android:textColor="#293152"
        android:textSize="20dp" />

</RelativeLayout>